-- Dressmaker database

-- 1.Some sample queries

SELECT order_ref, line_no, ol_style, ol_size, ol_material
 FROM order_line

-- Result:
order_ref	line_no	ol_style	ol_size	ol_material
1	1	1	8	1
1	2	2	8	2
2	1	3	10	3
2	2	4	10	4
2	3	5	10	5
3	1	6	12	6
4	1	1	14	7
4	2	2	14	10
5	1	3	16	9
5	2	4	16	10
5	3	5	16	11
6	1	1	8	12
6	2	2	8	13
6	3	3	8	14
7	1	4	10	1
7	2	5	10	2
7	3	6	10	3
8	1	6	12	4
8	2	5	12	5
